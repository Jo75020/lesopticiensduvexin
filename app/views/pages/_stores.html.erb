<div class="container">
  <div class="row">
    <% @stores.each do |store|  %>
    <%= link_to store_path(store) do %>
    <div class="col-md-4 card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= store.photo %>');">
      <div class="card-description">
        <h2> <%= store.name %> </h2>
        <p> <%= store.address %> </p>
        <p> <%= store.schedule %> </p>
        <p> <%= store.phone %> </p>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
